CLOUDFLARE_ZONE_ID=your_cloudflare_zone_id

# ===========================================
# BUSINESS CONFIGURATION
# ===========================================

# Company Information
COMPANY_NAME="The Moon Exports"
COMPANY_EMAIL=info@themoonexports.com
COMPANY_PHONE="+91 8909070131"
COMPANY_ADDRESS="Sambhal, Moradabad, Uttar Pradesh, India"

# Social Media URLs
SOCIAL_FACEBOOK=https://www.facebook.com/themoonexports
SOCIAL_INSTAGRAM=https://www.instagram.com/themoonexports
SOCIAL_LINKEDIN=https://www.linkedin.com/company/themoonexports
